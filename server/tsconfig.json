{
    "compilerOptions": {
      "allowJs": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["es7", "dom"],
      "mapRoot": "../dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "../dist",
      "sourceMap": true,
      "strictNullChecks": false,
      "noImplicitAny": true,
      "target": "es6",
      "typeRoots": [
        "../node_modules/@types"
      ]
    },
    "exclude": [
      "./client/"
    ]
  }